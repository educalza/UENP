<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="327.0" prefWidth="468.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.UsuarioEditarController">
    <children>
        <VBox layoutX="89.0" layoutY="63.0" prefHeight="222.0" prefWidth="290.0" spacing="15.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <ComboBox fx:id="cbUsuarios" onAction="#comboBox" promptText="Selecione o Usuário" />
            <TextField fx:id="txtNovoLogin" promptText="Novo Login" />
            <TextField fx:id="txtNovoNome" promptText="Novo Nome" />
         <TextField fx:id="txtNovaSenha" promptText="Nova Senha" />
         <TextField fx:id="txtNovaSenha2" promptText="Confirmar Nova Senha" />

            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="btnConfirmar" onAction="#confirmar" text="Confirmar" />
                <Button fx:id="btnLimpar" onAction="#limpar" text="Limpar" />
                <Button fx:id="btnCancelar" onAction="#cancelar" text="Cancelar" />
            </HBox>
        </VBox>

         <Label layoutX="181.0" layoutY="20.0" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Editar Usuário" />
    </children>
</AnchorPane>
